#!/bin/sh

BUILD_ROOT=$1

indent() {
  sed -u 's/^/       /'
}

message() {
  echo "-----> $*"
}

# Install Jekyll into BUILD_ROOT/.gems
cat << EOF > ~/.gemrc
gemhome: $BUILD_ROOT/.gems
gempath:
- $BUILD_ROOT/.gems
EOF

# message "Installing libv8"
# gem uninstall libv8
gem install libv8 -v '3.11.8.4' --no-rdoc --no-ri | indent
message "Installing therubyracer"
gem install therubyracer -v '0.10.2'  --no-rdoc --no-ri  | indent
message "Installing jekyll"
gem install jekyll --no-rdoc --no-ri | indent

# Run Jekyll
message "Setting environment variables"
export GEM_HOME=$BUILD_ROOT/.gems
export PATH=$BUILD_ROOT/.gems/bin:$PATH
export LC_ALL=en_US.UTF8

message "Compiling Jekyll site"
$BUILD_ROOT/.gems/bin/jekyll build | indent
